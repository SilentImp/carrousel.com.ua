@require 'mixins'

.message
  position absolute
  border 1px solid #fff
  box-sizing border-box
  padding 70px 65px
  z-index 10
  vertical-align middle
  height auto
  width auto
  line-height 0
  margin auto
  text-align center
  color #000
    
  &:after
    content "."
    display block
    font-size 0
    overflow hidden
    text-indent -9999px
    line-height 0
    background #FFF
    position absolute
    top 9px
    left 9px
    right 9px
    bottom 9px
    z-index -1
    pointer-events none
    
  &-title
    font-family "GothamPro Bold", Helvetica, Arial, sans-serif
    font-size 24px
    line-height 36px
    text-transform uppercase
    margin-bottom 30px
    color #040707 
    letter-spacing 6px 
  &-text
    font-family "PFDinTextPro", Helvetica, Arial, sans-serif
    font-size 12px
    line-height 15px
    color #646464
    
  address
    margin-top 44px
    font-size 13px
    line-height 18px
    font-family "Minion Pro", Georgia, serif   
    a
      font-style normal
      color #FFF
      text-decoration none
      &:hover
        text-decoration underline   
  
  &.message-black
    color #fff
    border-color #000
    &:after
      background #000 
    .message-title
      color #FFF
    .message-text
      color #FFF 
      
