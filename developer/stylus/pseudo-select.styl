@require 'mixins'

.pseudo-select
  position relative
  width 100%
  box-sizing border-box
  display block
  margin 0 0 27px
  border 1px solid #000
  padding 0
  font-size 12px
  height 34px
  line-height 34px
  font-family "PFDinTextPro", Helvetica, Arial, sans-serif
  &:after
    content ""
    position absolute
    height 0
    width 0
    overflow hidden
    line-height 0
    font-size 0
    display block
    border-width 9px 5px 0
    border-color #000 transparent transparent
    border-style solid solid none
    right 15px
    top 0
    bottom 0
    margin auto
  &:hover
    .pseudo-select-list
      display block
  .pseudo-select-current
    padding 0 30px 0 10px
    cursor pointer
  .pseudo-select-list
    background-color #FFF 
    max-height 200px
    overflow auto 
    display none
    position absolute
    left -1px
    right -1px
    top 100%
    z-index 100
    li
      overflow hidden
      position relative
      text-overflow ellipsis
      cursor pointer
      margin-top 1px
      background-color #000
      color #FFF
      height 34px
      line-height 34px
      font-size 12px
      padding 0 10px   
      &:hover
        background-color #444 
      
    