@require 'mixins'
@require 'item'

html.linux,
html.mac
  .main>section.catalog
    &.custom-candy
      .box-wrapper
        .box
          .box-container
            .icons
              .title
                &:before
                  smooth-icon()
    .box-wrapper
      .box 
        .box-container
          .icons
            .icon    
              &.loaded
                &:before
                  smooth-icon()
    header
      .type-navigation
        a
          &:before
            smooth-icon()


body.cookie-animation
  perspective 800px
  transform-style preserve-3d

body
  &>.falling-img
    position absolute
    transform translateZ(500px)
    z-index 500
    width 90px
    height 90px
    margin-top -45px
    margin-left -45px 
    opacity 0
    background-size 100% 100%
    transition transform .25s, opacity .25s
    &.drop
      opacity 1
      transform translateZ(0)
    &.fly
      opacity 1
      transform none
      transition opacity .5s, left 2s, top 2s

.main>section.catalog
  position relative
  margin 0 auto 90px
  &.custom-candy
    .box-wrapper
      .box
        .box-container
          display none
          &.ready
            display block
          .icons
            text-align left
            display block
            margin-top 20px
            position relative
            .wrapper
              padding-left 120px
              position relative
              display block
              .icon
                width 30px
                &:hover
                  z-index 10
            .title
              position absolute
              left 0
              top -8px
              line-height 30px
              font-size 12px
              font-family "GothamPro", Helvetica, Arial, sans-serif
              &:before
                icon()
                content "\e800"
                color #1BA694
                font-size 18px
                margin-right 10px 
          .weight
            text-transform uppercase
            color #000
            line-height 140px
            font-size 30px
            font-family "GothamPro Bold", Helvetica, Arial, sans-serif
            b
              font-size 150px
  .box-wrapper
    height 509px
    line-height 509px
    text-align center
    background url("../images/bg/macaron.jpg") 50% 50% no-repeat
    background-size cover
    position relative
    .box 
      line-height 16px
      border 1px solid #fff
      box-sizing border-box
      padding 30px 45px
      z-index 10
      vertical-align middle
      height auto
      width 1000px
      display inline-block
      position relative
      margin auto
      text-align center
      color #000
      .box-container
        display none
        .icons
          justify-content space-between
          display flex
          flex-wrap wrap
          margin-bottom 18px
          &.big
            margin 10px 0 5px
            .icon
              margin 10px 20px
              width 60px
              height 44px
          &.small 
            margin 25px 0 5px
            .icon
              margin 0
              width 110px
              height 110px
              line-height 110px
             
          .icon
            display inline-block
            background #FFF url("../images/ico/loader.gif") 50% 50% no-repeat
            background-size 16px 16px
            position relative
            text-align center
            pointer-events none
            &.loaded,
            &.loading
              pointer-events all
            &.loaded:hover 
              .hint
                display block
            .hint
              position absolute
              left 50%
              bottom 100%
              margin-bottom 10px
              z-index 10
              display none
              .wrapper
                position relative
                left -50%
                background-color #000
                color #FFF
                font-family "Minion Pro", Georgia, serif
                font-size 16px
                height 31px
                line-height 31px
                padding 0 14px
                border-radius 16px 
                white-space nowrap
                &:after
                  content ""
                  height 0
                  width 0
                  line-height 0
                  font-size 0
                  overflow hidden
                  display block
                  position absolute
                  border-width 6px 6px 0
                  border-style solid
                  border-color #000 transparent transparent
                  top 100%
                  left 50%
                  margin-left -6px
                
            &.loaded
              cursor pointer
              transition opacity .25s
              &:hover:before
                opacity 1
              &:before
                icon()
                pointer-events none
                opacity 0
                line-height 30px
                width 30px
                height 30px
                position absolute
                margin auto
                top 0
                left 0
                bottom 0
                right 0
                content '\e813'
                color #fff
                background-color #000 
                font-size 15px 
                border-radius 100%
            &.loading
              img
                position absolute
                left -2000px
                top -2000px
                opacity 0
            img
              translate opacity .25s
              opacity 1
              width 100%
              display inline-block
              vertical-align middle
        footer
          display block
          clear both
          width 100%
          margin-top 24px
          position relative
          text-align center
          .order
            round-button()
            opacity 1
            translate opacity .25s
            &.disabled
              opacity 0.5
              pointer-events none
            &:before
              font-size 15px
              vertical-align middle
              margin -2px 10px 0 -2px
          .price
            right 0
            position absolute
            font-size 12px
            line-height 24px
            font-family "GothamPro", Helvetica, Arial, sans-serif
            span
              font-size 18px
              font-family "GothamPro Bold", Helvetica, Arial, sans-serif
            
        &.selected
          display block
      .box-type
        clear both
        margin 10px 0 0
        padding 0 0 0 45px 
        a
          color #A2A2A2 
          text-decoration none
          position relative
          &:hover,
          &.selected,
          &.small.selected,
          &.big.selected
            color #000
            &:before
              opacity 1
            &:after
              z-index 10
              content "."
              font-size 0
              line-height 0
              height 0
              width 0
              overflow hidden
              text-indent -9999px
              border-width 6px 6px 0
              border-style solid
              border-color #000 transparent transparent
              position absolute
              bottom 0
              left 0
              right 0
              margin auto
          &.small 
            float left
            font-size 12px
            line-height 40px
            position relative
            &:before
              position absolute
              top 10px
              right 100%
              opacity 0.5
              font-size 18px
              margin-right 10px
              color $green 
              width auto
              vertical-align middle
          &.big
            position relative
            float right
            line-height 40px
            font-size 12px
            &:before
              position absolute
              right 100%
              opacity 0.5
              font-size 32px
              margin-right 10px
              color $green
              width auto
              vertical-align middle
        clearit()
      &-title
        font-family "GothamPro Bold", Helvetica, Arial, sans-serif
        font-size 24px
        line-height 36px
        text-transform uppercase
        margin-bottom 20px
        color #040707 
        letter-spacing 6px 
        text-align center
      &-text
        font-family "PFDinTextPro", Helvetica, Arial, sans-serif
        font-size 12px
        line-height 15px
        color #646464
        text-align center
        max-width 400px
        margin auto
        
      &:after
        content "."
        display block
        font-size 0
        overflow hidden
        text-indent -9999px
        line-height 0
        background #FFF
        position absolute
        top 9px
        left 9px
        right 9px
        bottom 9px
        z-index -1
        pointer-events none
        
  .items-list
    max-width 1000px
    margin 38px auto 0
    position relative
    display flex
    flex-wrap wrap
    justify-content space-between
    text-align center 
    item()

  .paginator
    max-width 1000px
    margin 0 auto
    background: linear-gradient(to right, rgba(32,189,169,1) 0%,rgba(32,189,169,1) 20%,rgba(32,189,169,0) 20%,rgba(32,189,169,0) 50%,rgba(32,189,169,1) 50%,rgba(32,189,169,1) 70%,rgba(32,189,169,0) 70%,rgba(32,189,169,0) 100%)
    background-position 50% 100%
    background-size 10px 2px
    background-repeat repeat-x
    text-align center
    padding 10px 0 12px
    height 30px
    line-height 30px
    font-size 0
    a
      vertical-align middle
      font-family "GothamPro", Helvetica, Arial, sans-serif
      font-size 12px
      color #C0C0C0 
      width 28px
      height 28px
      line-height 28px
      text-align center
      border 1px solid #fff
      margin 0 5px 
      display inline-block
      text-decoration none
      transition border-color .25s, color .25s, opacity .25s
      &.prev,
      &.next
        opacity 0.5
        &:hover
          opacity 1
          border-color #fff
        
      &.next
        background url("../svg/paginator-next.svg") 50% 50% no-repeat
      &.prev
        background url("../svg/paginator-prev.svg") 50% 50% no-repeat
      &.selected
        pointer-events none
        cursor default
      &:hover,
      &.selected
        color #000 
        border-color #000
       
  header
    max-width 1000px
    margin 0 auto
    margin-bottom 33px
    clearit()
    .abstract
      font-family "PFDinTextPro", Helvetica, Arial, sans-serif
      font-size 12px
      line-height 15px
      color #646464
      position relative
      overflow hidden
    .our-box,
    .your-box
      sqr-button()
      float right
      height 28px
      padding-left 0
      overflow hidden
      font-size 13px
      font-family "Minion Pro", Georgia, serif
      margin-top 11px
      margin-left 20px 
      
      &:before
        width 30px
        height 30px
        margin-right 10px
        text-align center
        
    .type-navigation
      background: linear-gradient(to right, rgba(32,189,169,1) 0%,rgba(32,189,169,1) 20%,rgba(32,189,169,0) 20%,rgba(32,189,169,0) 50%,rgba(32,189,169,1) 50%,rgba(32,189,169,1) 70%,rgba(32,189,169,0) 70%,rgba(32,189,169,0) 100%)
      background-position 50% 100%
      background-size 10px 2px
      background-repeat repeat-x
      margin 23px 0 16px
      padding-bottom 5px
      a
        font-family "GothamPro", Helvetica, Arial, sans-serif
        font-size 12px
        line-height 30px
        color #000
        text-decoration none
        margin 0 50px 0 40px
        position relative
        display inline-block
        &.selected:after,
        &:hover:after
          content "."
          font-size 0
          line-height 0
          height 0
          width 0
          overflow hidden
          text-indent -9999px
          border-width 0 6px 6px
          border-style none solid solid
          border-color transparent transparent #000
          position absolute
          bottom -5px
          left 0
          right 0
          margin auto  
          
        &.selected
          color #a3a3a3
          pointer-events none
          &:before
            opacity 0.5
        &.macaron:before
          font-size 22px
        &.zephyr:before
          font-size 24px
        &.candy:before
          font-size 22px 
        &.jujube:before
          font-size 17px
        &:before
          icon()
          color $green
          font-size 20px
          position absolute
          display block
          width 40px
          height 36px
          line-height 36px
          right 100%
          top 0
          bottom 0
          margin auto
          background-repeat no-repeat
          background-position 0 50% 
          
@media (max-width: 1000px) 
  .main>section.catalog 
    .paginator
      margin 0 25px 
    .items-list
      margin-left auto
      margin-right auto
      border-left 50px solid #fff
      width 700px 
    header
      padding 0 25px
    .box-wrapper
      background none
      height auto
      .box
       position relative
       left 0
       top 0
       width auto
       padding 0 25px 
       transform none
       display block

@media (max-width: 800px)
  .main>section.catalog
    header
      text-align center
      .our-box,
      .your-box
        position relative
        float none
        display inline-block
        margin-bottom 20px
      .abstract
        clear both

@media (max-width: 750px)
  .main>section.catalog

    .items-list
      margin-left auto
      margin-right auto
      width 300px 
      border-left-style none
        
@media (max-width: 650px)
  .main>section.catalog
    .paginator
      margin 0
    header
      .type-navigation
        a 
          padding-left 0
          margin 0 5px 
          &:before
            display none
    .box-wrapper
      .box 
        .box-type
          padding 0 5px
          a:before
            display none
        .box-container 
          .icons.big
            .icon
              margin 10px 5px
              width 50px
              height 30px 
          footer
            .price
              margin 0 0 20px 
              display block
              position relative
              