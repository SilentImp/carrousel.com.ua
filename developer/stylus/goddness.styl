@require 'mixins'

section.goddness
  height 569px
  position relative
  line-height 569px
  text-align center
  &:after
    content "."
    display block
    position absolute
    width 514px 
    height 610px
    bottom 0
    left 50%  
    margin-left -720px
    pointer-events none
  .message
    display inline-block
    vertical-align middle
    position relative
    width 666px
    left 174px
    right 0
    top 0
    bottom 0
    
@media (min-width: 681px)
  section.goddness
    background url("../images/bg/goddness.jpg") 50% 50% no-repeat
    background-size cover

@media (min-width: 1101px)
  section.goddness
    &:after
      background url("../images/bg/goddness.png") 50% 50% no-repeat

@media (max-width: 1100px)
  section.goddness
    .message
      margin auto
      left 0
    &:after
      display none
      
@media (max-width: 680px)
  section.goddness
    background none
    height auto
    line-height inherit 
    .message
      width auto
      padding 0 20px
      border-style none
      margin 20px 0 
      text-align left
      transform none
      position static
      &:after
        display none