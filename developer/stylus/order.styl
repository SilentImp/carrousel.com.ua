@require 'mixins'

html.linux,
html.mac
  .order
    footer
      .price
        &:before
          smooth-icon()
      nav
        .order
          &:before
            smooth-icon()

.order
  max-width 1000px
  margin auto
  padding 0 0 38px
  position relative
  font-family "PFDinTextPro", Helvetica, Arial, sans-serif
  &>section
    font-size 0
    line-height 0
    margin-top 35px
    position relative
    fieldset
      vertical-align top
      display inline-block
      width 47.8%
      position relative
      margin-left 4.4%
      input
        font-family "PFDinTextPro", Helvetica, Arial, sans-serif
        width 100%
        box-sizing border-box
        display block
        margin 0 0 27px
        border 1px solid #000
        padding 0 10px
        font-size 12px
        height 34px 
      textarea
        font-family "PFDinTextPro", Helvetica, Arial, sans-serif
        width 100%
        box-sizing border-box
        resize none
        border 1px solid #000
        padding 10px
        margin 0 0 27px
        height 217px  
      &:first-child
        margin-left 0

  .order-title
    position relative
    max-width 1000px
    margin auto 
    z-index 2
    background: linear-gradient(to right, rgba(32,189,169,1) 0%,rgba(32,189,169,1) 20%,rgba(32,189,169,0) 20%,rgba(32,189,169,0) 50%,rgba(32,189,169,1) 50%,rgba(32,189,169,1) 70%,rgba(32,189,169,0) 70%,rgba(32,189,169,0) 100%)
    background-position 0 100%
    background-size 10px 2px
    background-repeat repeat-x
    text-align center
    line-height 48px
    font-size 40px
    text-transform uppercase
    margin 0 auto 15px
    padding 16px 0 
    letter-spacing 6px 
    font-family "GothamPro Bold", Helvetica, Arial, sans-serif
    white-space nowrap
  .order-text
    z-index 2
    position relative
    text-align center
    font-family "PFDinTextPro", Helvetica, Arial, sans-serif
    font-size 12px
    line-height 15px
    color #646464
    width 280px
    margin auto
  footer 
    clearit()
    margin-top 70px
    position relative
    .delivery
      float left
      font-size 12px
      line-height 28px
      font-family "GothamPro", Helvetica, Arial, sans-serif
      &.free
        position relative
        top 4px
      &.locked
        display none
      .delivery-price
        font-family "GothamPro Bold", Helvetica, Arial, sans-serif
        font-size 18px
      b
        vertical-align super
        color #C0C0C0
        font-size 10px 
        position relative
        top -10px
      &:before
        font-size 0
        line-height 0
        content ""
        width 30px
        height 18px
        display inline-block
        background url("../images/ico/delivery.png") 50% 50% no-repeat
        vertical-align middle
        margin-right 5px
        margin-left -4px
        position relative
        top -2px
    .price
      float right
      font-size 12px
      line-height 30px
      font-family "GothamPro", Helvetica, Arial, sans-serif
      &:before
        icon()
        content '\e80a'
        font-size 16px
        vertical-align middle
        color $green
        width 18px
        height 18px
        margin-top -15px
        margin-right 5px
        position relative

      span
        font-family "GothamPro Bold", Helvetica, Arial, sans-serif
        font-size 18px
    nav
      clear both
      background: linear-gradient(to right, rgba(32,189,169,1) 0%,rgba(32,189,169,1) 20%,rgba(32,189,169,0) 20%,rgba(32,189,169,0) 50%,rgba(32,189,169,1) 50%,rgba(32,189,169,1) 70%,rgba(32,189,169,0) 70%,rgba(32,189,169,0) 100%)
      background-position 50% 0
      background-size 10px 2px
      background-repeat repeat-x
      padding 30px 0 0 
      text-align center
      p
        font-family "PFDinTextPro", Helvetica, Arial, sans-serif
        font-size 12px
        line-height 15px
        color #646464
        max-width 350px
      .order
        round-button()
        cursor pointer
        &:before
          icon()
          margin-right 5px
          content '\e80b'


@media (max-width: 1000px)
  .order  
    padding 0 20px 38px

@media (max-width: 600px)
  .order
    section
      fieldset
        width 100%
        margin 0
        
@media (max-width: 680px)
  .order
    .order-title
      white-space normal
      text-align left
      width auto
      background none
    .order-text
      text-align left
      width auto