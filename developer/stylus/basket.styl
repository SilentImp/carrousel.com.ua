@require 'mixins'


.basket
  max-width 1000px
  margin 24px auto 30px
  position relative
  header,
  footer 
    clearit()
    position relative
    .delivery
      float left
      font-size 12px
      line-height 28px
      font-family "GothamPro", Helvetica, Arial, sans-serif
      transform translateZ(0)
      &.free
        position relative
        top 4px
      &.locked
        display none
      .delivery-price
        font-family "GothamPro Bold", Helvetica, Arial, sans-serif
        font-size 18px
      b
        vertical-align super
        color #C0C0C0
        font-size 10px 
        position relative
        top -10px
      &:before
        icon()
        line-height 24px
        width 24px
        height 24px

        content '\e803'
        color $green
        font-size 12px 
        
        width 30px
        height 18px
        display inline-block
        vertical-align middle
        margin-right 5px
        margin-left -4px
        position relative
        top -4px
    .price
      float right
      font-size 12px
      line-height 30px
      font-family "GothamPro", Helvetica, Arial, sans-serif
      &:before
        icon()
        width 18px
        height 18px
        font-size 17px
        line-height 18px
        display inline-block
        vertical-align middle
        margin-right 5px
        position relative
        top -2px
        left -2px
        color $green
        content '\e80a'
      span
        font-family "GothamPro Bold", Helvetica, Arial, sans-serif
        font-size 18px
    nav
      clear both
      background: linear-gradient(to right, rgba(32,189,169,1) 0%,rgba(32,189,169,1) 20%,rgba(32,189,169,0) 20%,rgba(32,189,169,0) 50%,rgba(32,189,169,1) 50%,rgba(32,189,169,1) 70%,rgba(32,189,169,0) 70%,rgba(32,189,169,0) 100%)
      background-position 50% 0
      background-size 10px 2px
      background-repeat repeat-x
      padding 18px 0 0 
      p
        font-family "PFDinTextPro", Helvetica, Arial, sans-serif
        font-size 12px
        line-height 15px
        color #646464
        max-width 350px
      .order
        float right
        round-button()
        &:before
          icon() 
          content '\e80b'
          font-size 16px
          line-height 30px
          height 30px
          display inline-block
          vertical-align middle
          margin-right 5px
          margin-top -3px
  footer 
    margin-top 70px
    nav
      padding-top 30px
      text-align center
      .order
        float none


  .items
    margin 44px 0
    font-size 0
    line-height 0
    .item
      min-height 166px
      white-space nowrap
      margin-bottom 25px
      line-height 166px
      &:nth-child(odd) .preview .photos .photo
        display inline-block
      .preview
        line-height 0
        position absolute
        height 166px
        width 166px
        display inline-block
        vertical-align middle
        margin-right 130px
        .preview-nav
          position absolute
          top 0
          left 0
          bottom 0
          right 0
          font-size 0
          line-height 0
          .preview-prev,
          .preview-next
            position absolute
            top 0
            bottom 0
            width 50%
            background-position 50% 50%
            background-repeat no-repeat
            opacity 0.5
            z-index 20
            transition opacity .25s
            &:hover
              opacity 1
          .preview-prev
            left 0
            background-image url("../svg/prev-small.svg") 
          .preview-next
            right 0
            background-image url("../svg/next-small.svg") 
        .photos
          width 164px
          height 164px
          border 1px solid #000
          white-space nowrap
          overflow hidden
          .photo
            width 164px
            height 164px
            text-align center
            line-height 164px
            vertical-align top
            img
              vertical-align middle
              max-width 164px
              max-height 164px
              
      .details
        line-height 0
        display inline-block
        vertical-align middle
        width 100%
        margin-top -13px
        padding 0 0 0 300px
        box-sizing border-box 
        white-space normal
        .title
          font-size 16px
          line-height 18px
          text-transform uppercase
          letter-spacing 6px 
          margin-bottom 15px
          font-family "GothamPro Bold", Helvetica, Arial, sans-serif
        .secondary
          position relative
          width 100%
          margin-top -5px
          clearit()
          .price
            width 24.2%
            float left
            left 100%
            position relative
            margin-left -26.85%
            font-size 18px
            line-height 24px
            font-family "GothamPro Bold", Helvetica, Arial, sans-serif
            
          menu
            width 28.57%
            float left
            left 100%
            position relative
            margin-left -60%
            span
              width 70px
              text-align center
              font-size 13px
              line-height 24px
              font-family "Minion Pro", Georgia, serif   
              vertical-align middle
              display inline-block
            .dec,
            .inc
              width 18px
              height 18px
              display inline-block
              vertical-align middle
              text-decoration none
              color rgba(0, 0, 0, .5)
              line-height 18px
              text-align center
              transition color .25s
              &:hover
                color #000 
            .inc:before
              icon()
              content '\e80d'
              font-size 16px
              // background url("../svg/add.svg") 50% 50% no-repeat
            .dec:before
              icon()
              content '\e801'
              font-size 16px
              // background url("../svg/remove.svg") 50% 50% no-repeat
          .remove
            font-size 0
            line-height 0
            float left
            position relative
            width 18px
            height 18px
            line-height 18px
            text-align center
            color rgba(0, 0, 0, .5)
            left 100%
            text-decoration none
            margin-bottom -6px
            &:hover
              color #000 
            
            // background url("../svg/delete.svg") 50% 50% no-repeat
            border-radius 100% 
            &:before
              icon()
              content '\e80e'
              font-size 16px
          .list
            font-family "PFDinTextPro", Helvetica, Arial, sans-serif
            font-size 12px
            line-height 15px
            color #646464
            width 37.14%
            margin auto
            float left
            position relative
            left 100%
            margin-top 5px
            margin-left -100%


@media (max-width: 1000px)
  .basket 
    padding 0 20px 38px
    .remove
      margin-left -25px
      top 3px
    
@media (max-width: 800px)
  .basket 
    .items
      .item
        margin-bottom 64px
        .preview
          position relative
          display block
          margin 0 auto 48px
        .details
          padding-left 0
          display block
          width 100%
          
@media (max-width: 500px)
  .basket .items .item .details
    .secondary
      .list
        float none
        left 0
        width auto
        margin 0 0 15px
      menu
        width 30%
        margin-left -100%
      .price
        width 50%
        margin-left -55%
