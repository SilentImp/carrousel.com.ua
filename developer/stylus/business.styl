@require 'mixins'

section.business
  position relative
  height 626px
  padding 36px 0 0 
  .slide-show
    overflow hidden
    position absolute
    right 0
    left 0
    top 0
    bottom 0
    padding-left 75px
    z-index 1
    .slide-show-nav
      position absolute
      height 100px
      width 155px
      top 0
      bottom 0
      right 0
      left 50%
      margin auto
      .slide-show-nav-prev,
      .slide-show-nav-next
        width 55px
        height 100px
        float left
        opacity 0.5
        transition opacity .25s
        &:hover
          opacity 1
      .slide-show-nav-prev
        background url("../svg/prev.svg") 50% 50% no-repeat
      .slide-show-nav-next
        float right
        background url("../svg/next.svg") 50% 50% no-repeat
    .slide
      z-index 0
      pointer-events none
      position absolute
      left -100%
      top 0
      height 100%
      width 100%
      font-size 0
      line-height 0
      white-space nowrap
      transform translateZ(0)
      background-size cover
      &.ready-next
        left -100% 
      &.ready-prev
        left 100% 
      &.current
        left 0
        transition .5s left linear
      &.hidden-next
        left 100%
        transition .5s left linear
      &.hidden-prev
        left -100%
        transition .5s left linear

  .business-title
    position relative
    max-width 1000px
    margin auto 
    z-index 2
    background: linear-gradient(to right, rgba(32,189,169,1) 0%,rgba(32,189,169,1) 20%,rgba(32,189,169,0) 20%,rgba(32,189,169,0) 50%,rgba(32,189,169,1) 50%,rgba(32,189,169,1) 70%,rgba(32,189,169,0) 70%,rgba(32,189,169,0) 100%)
    background-position 0 100%
    background-size 10px 2px
    background-repeat repeat-x
    text-align center
    line-height 80px
    font-size 40px
    text-transform uppercase
    margin 0 auto 15px
    letter-spacing 6px 
    font-family "GothamPro Bold", Helvetica, Arial, sans-serif
    white-space nowrap
  .business-text
    z-index 2
    position relative
    text-align center
    font-family "PFDinTextPro", Helvetica, Arial, sans-serif
    font-size 12px
    line-height 15px
    color #646464
    width 280px
    margin auto
  .message
    width 609px
    height auto
    top 50%
    left 50%
    transform translate(0%,-50%)
    margin auto 0 auto -500px
    padding 30px 120px 42px
    .tel
      position relative
      padding-left 16px
      margin-left 5px
      text-decoration none
      b
        text-decoration underline
        &:hover
          text-decoration none
      &:before
        margin 0 5px 0 0
        font-family "fontello"
        font-style normal
        font-weight normal
        speak none
        display inline-block
        text-decoration inherit
        text-align center
        font-variant normal
        text-transform none
        position absolute
        left 0
        content '\e812'
        color #fff
        font-size 16px 
      

      
    

@media (max-width: 1100px)
  section.business
    .message.message-black
      width 666px
      padding 70px 65px
      margin auto
      transform translate(-50%,-50%)
    .slide-show-nav
      display none
      
@media (max-width: 680px)
  section.business
    background none
    height auto
    .business-title
      text-align left
      width auto
      background none
      padding 0 20px 
    .business-text
      text-align left
      padding 0 20px 
      width auto
    .slide-show
      display none
    .message .tel:before
      color #646464
    .message.message-black
      width auto
      color #000 
      padding 0 20px
      margin 20px 0 
      text-align left
      transform none
      position static
      border-style none
      address
        margin 15px 0
        font-family "PFDinTextPro", Helvetica, Arial, sans-serif
        font-size 12px
        line-height 15px
        color #646464
        font-style normal
        a 
          color #646464
      .message-text
        color #646464
      .message-title
        color #000
      &:after
        display none 
          




        